- form_for([current_user, @goal]) do |f|
  = f.error_messages
  %table.form
    %tr
      %td.label title
      %td= f.text_field :title
    %tr
      %td.label description
      %td= f.text_area :description
    %tr
      %td.label tags
      - new_or_existing = @goal.new_record? ? 'new' : 'existing'
      - prefix = "goal[tags_for_#{new_or_existing}]"
      %td= text_field_tag prefix, @goal.tag_list
    %tr
      %td
      %td= f.submit "Submit"